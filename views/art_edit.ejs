    <%- include ('./partials/nav.ejs') %>
  </div>
   
  <div class="formwrap">
    <h1>Edit your content</h1>
    <form action="/arts/<%=upload.id%>?_method=PUT" method="POST">
      <label for="tiltle">Title</label>
      <input  name="title" type="input" value="<%=upload.title%>">
      <label for="description">Description</label>
      <input  name="description" type="input" value="<%=upload.description%>">
      <label for="tags">Tags</label>
      <input name="tags" type="input" value="<%=upload.tags%>">  
      <label for="img">image</label>
